<h1>Gems</h1>
<% @gems.each do |my_gem| %>

<% my_gem = (Gems.search my_gem).first %>
<div><h1><%= my_gem['name'] %></h1></div>  
<div>Description: <%= my_gem['info'] %></div>
<div>Project Site: <%= my_gem['project_uri'] %></div>
<div>Docs: <%= my_gem['documentation_uri'] || my_gem['homepage_uri'] %></div>
<div>By: <%= my_gem['authors'] %></div>
<% end %>
