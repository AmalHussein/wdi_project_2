<%= @repo.repo_name %>

<div class="gems">
<% @repo.gemms.each do |gemm| %>
  <div class="gem">
    <div class="gem-name"><h4>Name:<%= gemm.name %></h4></div>
    <div class="gem-docs">Docs: <%= gemm.documentation_url %></div>
    <div class="project-uri">Project URI: <%= gemm.project_url %></div>
    <div class="gem-resources">
      <h5>Resources</h5>
      <% gemm.resources.each do |resource| %>
        <div class="gem-resource"><%= link_to resource.site_name, resource.site_url %> </div>
      <% end %>
    </div>
<% end %>

<div id='resource-container'>
  <a id='resource-linkname' href="<%= resource_link %>"><%= resource_name %></a>
  <div id='resource-description'><%= resource_desc %></div>
</div>

<form id="resources-form">
  Title:<input type="text" id="resource-form-name" />
  Link:<input type="text" id="resource-form-url" />
  Body:<input type="text" id="resource-form-desc" />
  <button id="resource-create-form" >Create Post</button>
</form>
</div>

